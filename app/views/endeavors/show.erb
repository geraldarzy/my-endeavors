    <%end%>
    <% if !!@endeavor.pic %>   
        <img class = " pictures endeavor-solo-pic" src="<%=@endeavor.pic%>" alt="<%=@user.username%>'s <%=@endeavor.title%> picture" width="250" height="250px">
        <p class="caption"><%=@endeavor.pic_caption%></p>
    <%end%>
